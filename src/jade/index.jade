html
  head
    title Back to the Future
    link(rel="stylesheet", href="/public/css/jquery-ui-1.10.4.custom.css")
    script(src="//rawgithub.com/mrdoob/three.js/master/build/three.js")
    script(src="http://stemkoski.github.io/Three.js/js/OrbitControls.js")
    script(src="http://stemkoski.github.io/Three.js/js/KeyboardState.js")
    script(src="//js.leapmotion.com/leap-0.4.1.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/async/1.22/async.min.js")

    style.
      body {
        margin: 0;
        font-family: Helvetica, Arial;
        background: #f9f9f9;
        color: #333;
      }
      .ui {
        position: absolute;
        bottom: 30px;
        left: 0;
        right: 0;
      }
      .ui h1,
      .ui #form-search {
        text-align: center;
      }
      .ui .spinner {
        margin: 0 auto;
        width: 32px;
        height: 32px;
        background: url('/public/images/loader.gif');
      }
      .ui .spinner.hidden {
        visibility: hidden;
      }
      .ui h1 {
        font-size: 40px;
        margin: 20px 0;
        color: #92DDE0;
        font-family: 'Arial Rounded MT Bold', Arial, sans-serif;
        text-shadow: 1px 2px 0 #70C2D1;
      }
      .ui h1 strong {
        color: #FE6860;
        text-shadow: 1px 2px 0 #FD2500;
      }
      input[name='query'] {
        font-size: 24px;
        line-height: 1.5;
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 10px;
        outline: none;
      }
      select[name='startdate'] {
        font-size: 16px;
        border: 1px solid #ccc;
        outline: none;
      }
      select[name='enddate'] {
        font-size: 16px;
        border: 1px solid #ccc;
        outline: none;
      }
      #stage canvas {

      }
      #info-box {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 200px;
      }
      #info-box.hidden {
        display: none;
      }
      #info-box h3 {
        font-family: 'Arial Rounded MT Bold', Arial, sans-serif;
        color: #FE4830;
        margin: 0 0 10px;
      }
      #info-box .artist {
        color: #999;
        margin: 0 0 10px;
        font-size: 13px;
      }
      #info-box p {
        margin: 0 0 10px;
        font-size: 13px;
      }
      #year-range-slider {
        width: 30%;
      }
      #year-range-text{
        font-family: 'Arial Rounded MT Bold', Arial, sans-serif;
        color: #FE4830;
        margin: 0 0 10px;
      }

  body
    .ui
      h1 <strong>Back</strong> to the Future
      form(id='form-search')
        input(type='search', placeholder='Macintosh', value='Macintosh', name='query')
        input(type='hidden', name='itemperpage', value='20')
        br
        input(type='hidden',id='startdate',name='startdate')
        input(type='hidden',id='enddate',name='enddate')
        input(type='hidden', name='sortby', value='MostPopular')
      center 
        #year-range-slider
        #year-range-text
      .spinner.hidden

    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery.form/3.49/jquery.form.min.js")
    script(src="/public/js/jquery-ui-1.10.4.custom.min.js")
    script(src="/public/js/search.js")
    script(src="public/js/leap.js")

    #stage
    script(src="/public/js/render.js")

    #info-box.hidden
      h3
      .artist
      p
      .keyword

    script.
      function updateInfoBox(params) {
        var $box = $('#info-box');
        if (typeof params.show === 'boolean') $box[ params.show ? 'removeClass' : 'addClass']('hidden');
        if (params.title) $box.find('h3').text(params.title); // Title
        if (params.artist) $box.find('.artist').text(params.artist); // Artist
        if (params.caption) $box.find('p').text(params.caption); // Caption
      }
